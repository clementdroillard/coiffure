
{{> header}}

<div class="content-wrapper">
    <section class="content">
	    <div class="row">
	        <div class="col-md-4 col-md-offset-4 ">
		    	<center><h1>Modifier les informations du compte : </h1></center>
		    	<div class="alert alert-danger" style="display:none;" id="infoMdp">
  					Ancien mot de passe incorect  !
				</div>
				<div class="alert alert-danger" style="display:none;" id="info">
  					Veuillez renseigner tous les champs correctement !
				</div>
				<div class="alert alert-danger" style="display:none;" id="infoMail">
  					Ce mail est déjà utilisé par un autre compte !
				</div>
				<div class="alert alert-success" style="display:none;" id="infoOK">
  					Modification(s) enregistrée(s) !
				</div>
				<h3 class="box-title">Nom :</h3>
		        <input class="form-control" type="text" id="nom" value="{{nomClient}}" onblur="verifChamp(this)" /><br />
		        <h3 class="box-title">Prenom :</h3> 
		        <input class="form-control" type="text" id="prenom" value="{{prenomClient}}" onblur="verifChamp(this)" /><br />
		        <h3 class="box-title">Téléphone :</h3> 
		        <input class="form-control" type="tel" id="telephone" value="{{telClient}}" onblur="verifTel(this)" /><br />
		        <h3 class="box-title">Adresse Mail :</h3>
		        <input class="form-control" type="mail" id="adresseMail" value="{{mailClient}}" onblur="verifMail(this)" /><br />
		        <h3 class="box-title">Ancien mot de passe :</h3> 
		        <input class="form-control" type="password" id="oldMotDePasse" value="" onblur="verifChamp(this)"  /><br />
		        <h3 class="box-title">Nouveau mot de passe :</h3> 
		        <input class="form-control" type="password" id="newMotDePasse" value="" onblur="verifChamp(this)"  /><br />
		        <center><input  style="font-size: xx-large;" class="btn  btn-primary btn-lg" type="submit" onclick="modifCompte();" value="Modifier" /></center>
			</div>
		</div>	 
		
    </section>
</div>

<script>
  const clientId = {{ idClient }};
  const api = '{{ api }}';
  const oldMail = '{{mailClient}}';
</script>
