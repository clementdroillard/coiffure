{{> header}}

<div class="content-wrapper">
    <section class="content">
	    <div class="row">
	        <div class="col-md-4 col-md-offset-4 ">
		    	<center><h1>Modifier les informations du compte : </h1></center>
		    	<div class="alert alert-danger" style="display:none;" id="infoMdp">
  					Ancien mot de passe incorect  !
				</div>
				<div class="alert alert-danger" style="display:none;" id="infoMail">
  					Ce mail est déjà utilisé par un autre compte  !
				</div>
				<div class="alert alert-danger" style="display:none;" id="info">
  					Veuillez renseigner tous les champs correctement !
				</div>
				<div class="alert alert-success" style="display:none;" id="infoOK">
  					Modification(s) enregistrée(s) !
				</div>
		        <h3 class="box-title">Nom du Salon :</h3>
		        <input class="form-control" type="text" id="libelle" onblur="verifChamp(this)" value="{{libelleSalon}}" /><br />
		        <h3 class="box-title">Code Postal :</h3> 
		        <input class="form-control" type="text" id="CP" onblur="verifChampCP(this)" value="{{CpSalon}}" /><br />
		       	<h3 class="box-title">Ville :</h3> 
		        <input class="form-control" type="text" id="ville" onblur="verifChamp(this)" value="{{villeSalon}}"/><br />
		       	<h3 class="box-title">Adresse :</h3> 
		        <input class="form-control" type="text" id="adresse" onblur="verifChamp(this)" value="{{adresseSalon}}" /><br />
		        <h3 class="box-title">Adresse mail :</h3> 
		        <input class="form-control" type="text" id="adresseMail" onblur="verifMail(this)" value="{{adresseMailSalon}}" /><br />
		        <h3 class="box-title">Ancien mot de passe :</h3> 
		        <input class="form-control" type="password" id="oldMotDePasse" onblur="verifChamp(this)" value="" /><br />
		        <h3 class="box-title">Nouveau Mot de passe :</h3> 
		        <input class="form-control" type="password" id="newMotDePasse" onblur="verifChamp(this)"  value="" /><br />
		        <h3 class="box-title">Téléphone :</h3> 
		        <input class="form-control" type="text" id="telephone" onblur="verifTel(this)" value="{{telephoneSalon}}" /><br />
		        <center><input  style="font-size: xx-large;" class="btn  btn-primary btn-lg" type="submit" onclick="modifCompte();" value="Modifier" /></center>
			    <form method="POST" action="salon.php" id="postSalon">
					<input type="hidden" id="salonValue" name="salon" />
				</form>
			</div>
		</div>
	</section>
</div>
<script>
	const api = '{{ api }}';
	const salonId = {{salonId}};
	const oldMail = '{{adresseMailSalon}}';
</script>
<script src="../scripts/controleForm.js"></script>
