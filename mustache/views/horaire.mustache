
{{> header}}

<div class="content-wrapper">
    <section class="content">
	    <div class="row">
	        <div class="col-md-4 col-md-offset-4 ">
		    	<h1>Ajouter un horaire : </h1>
		    	<div class="alert alert-danger" style="display:none;" id="info">
  					Veuillez renseigner une heure de début et de fin !
				</div>
				<div class="alert alert-danger" style="display:none;" id="infoHorraire">
  					Veuillez renseigner une date de début inférieur à celle de fin !
				</div>
				<div class="alert alert-success" style="display:none;" id="infoOk">
  					Horaire enregistré !
				</div>
		        <h3 class="box-title">Coiffeur :</h3>
		        <select id="listeCoiffeur" class="form-control" >
				</select>
		        <h3 class="box-title">Jour de la semaine :</h3> 
		        <select id="listeJour" class="form-control" >
		        	<option value="1">Lundi</option> 
  					<option value="2">Mardi</option>
  					<option value="3">Mercredi</option>
	  				<option value="4">Jeudi</option> 
					<option value="5">Vendredi</option>
					<option value="6">Samedi</option>
					<option value="7">Dimanche</option>
				</select>
		        <h3 class="box-title">Heure début :</h3>
		        <div class='input-group date' id='datetimepicker1' onmousedown="chargerTimePicker()">
                    <input type='text' id="debut" class="form-control" value="00:00" onblur="verifChamp(this)" />
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
                <h3 class="box-title">Heure fin :</h3>
                <div class='input-group date' id='datetimepicker2' onmousedown="chargerTimePicker()">
                    <input type='text' id="fin" class="form-control" value="00:00" onblur="verifChamp(this)" />
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div><br/>
		        <center><input  style="font-size: xx-large;" class="btn  btn-primary btn-lg" type="submit" onclick="ajoutDispo();" value="Ajouter" /></center>
			</div>
		</div>	 
		
    </section>
</div>

<script>
  const salonId = {{ idSalon }};
  const api = '{{ api }}';
</script>
<script src="../scripts/controleForm.js"></script>
<script src="../scripts/horaire.js"></script>
