{{> header}}

<div class="content-wrapper">
    <section class="content">
	    <div class="row">
	        <div class="col-md-4 ">
		    	<h1>Ajouter un Article: </h1>
		    	<div class="alert alert-danger" style="display:none;" id="info">
  					Veuillez saisir entre 3 et 190 caractères dans chaque champ et un nombre pour le prix et le stock !
				</div>
				<div class="alert alert-success" style="display:none;" id="infoOk">
  					Article enregistré !
				</div>
		        <h3 class="box-title">Nom de l'article :</h3>
		        <input class="form-control" type="text" id="libelle" onblur="verifChamp(this)" />
		        <h3 class="box-title"> Prix :</h3> 
		        <input class="form-control" type="number" id="prix" onblur="verifNombre(this)" />
		        <h3 class="box-title"> Code barre :</h3> 
		        <input class="form-control" type="text" id="codeBarre" onblur="verifChamp(this)" />
		        <h3 class="box-title"> Stock :</h3> 
		        <input class="form-control" type="number" id="stock" onblur="verifNombre(this)" />
		        <center><input  style="font-size: xx-large;" class="btn  btn-primary btn-lg" type="submit" onclick="ajoutArticle();" value="Ajouter" /></center>
			</div>
			<div class="col-md-8 ">
				<h1>Liste des Articles: </h1><br/><br/>
				<table id="table" class="table table-striped table-bordered" cellspacing="0" width="100%">
			        <thead>
			            <tr>
			                <th>Nom Article</th>
			                <th>Prix</th>
			                <th>Code Barre</th>
			                <th>Stock</th>
			            </tr>
			        </thead>
			        <tfoot>
			            <tr>
				            <th>Nom Article</th>
			                <th>Prix</th>
			                <th>Code Barre</th>
			                <th>Stock</th>
			            </tr>
        			</tfoot>
        			<tbody id="tbody">
        			</tbody>
			    </table>
			</div>
		</div>	 
		
    </section>
</div>

